FROM nginx

# Удаление стандартной конфигурации Nginx
RUN rm /etc/nginx/conf.d/default.conf

# Копирование пользовательской конфигурации Nginx
COPY nginx.conf /etc/nginx/conf.d



# Установка разрешений на чтение для всех пользователей на каталоги и файлы
RUN ls
RUN pwd
RUN chmod -R 755 /media /static
RUN find /static -type f -exec chmod 644 {} \;
RUN find /media -type f -exec chmod 644 {} \;

# Изменение владельца каталогов на www-data
RUN chown -R www-data:www-data /static
RUN chown -R www-data:www-data /media